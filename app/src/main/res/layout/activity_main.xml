<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_makeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ED8B1F"
        android:text="@string/makeup" />

    <Button
        android:id="@+id/button_glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ED8B1F"
        android:text="@string/glasses" />

    <Button
        android:id="@+id/button_regions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ED8B1F"
        android:text="@string/regions" />

    <Button
        android:id="@+id/button_face_landmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ED8B1F"
        android:text="@string/face_landmarks" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/goToChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3406D0"
        android:text="В настройки" />

</LinearLayout>